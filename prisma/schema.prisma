  name                  String
  governmentId          String?                 @db.VarChar(10)
  governmentIdType      GovernmentIDType?
  status                MerchantStatus          @default(ACTIVE)
  type                  MerchantType            @default(NOT_AFFILIATED)
  phone                 String?
  location              Json?                   @db.JsonB
  data                  Json?                   @db.JsonB
  notes                 String?
  additionalContext     Json?                   @db.JsonB
